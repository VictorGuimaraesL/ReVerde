<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="400.0"
            style="-fx-background-color: red; -fx-background-image: url('@../../../assets/BG_VERMELHO.png'); -fx-background-size: cover; -fx-background-position: center; -fx-background-repeat: no-repeat;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.reverde.reverde.PerguntaValidacaoErroController">
    <children>
        <VBox fx:id="contentContainer" alignment="CENTER" prefHeight="751.0" prefWidth="350.0" style="-fx-background-radius: 10; -fx-background-color: transparent;">
            <AnchorPane.topAnchor>24.0</AnchorPane.topAnchor>
            <AnchorPane.bottomAnchor>25.0</AnchorPane.bottomAnchor>
            <AnchorPane.leftAnchor>25.0</AnchorPane.leftAnchor>
            <AnchorPane.rightAnchor>25.0</AnchorPane.rightAnchor>
            <children>
                <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../assets/RESPOSTA_INCORRETA.png" />
                    </image>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </ImageView>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Ops, resposta incorreta!" textAlignment="CENTER" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Parece que esta não foi a resposta esperada. Tente novamente amanhã!" textAlignment="CENTER" wrapText="true" textFill="#FFFFFF">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="50.0" left="20.0" right="20.0" />
                    </VBox.margin>
                </Label>
                <Button mnemonicParsing="false" onAction="#onBackToProfileClick" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5;" text="Voltar ao Perfil" textFill="BLACK">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>